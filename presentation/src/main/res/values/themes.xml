<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.TicketSearch" parent="Theme.Material3.DayNight.NoActionBar">
         <item name="colorPrimary">@color/blue</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="colorOnSurface">@color/grey_5</item>
        <item name="android:windowBackground">@color/black</item>
    </style>

    <style name="Theme.TicketSearch" parent="Base.Theme.TicketSearch" />

    <style name="BottomNavigationViewStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="itemTextAppearanceActive">@style/BottomNavigationTextStyle</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationTextStyle</item>
        <item name="backgroundTint">@color/black</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <style name="BottomNavigationTextStyle" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Title1" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/sf_pro_display_semibold</item>
        <item name="android:fontFamily">@font/sf_pro_display_semibold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

